package com.ejercicio;

public class CalculadoraGeometrica {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("calcular perimetros");
		Perimetro per=new Perimetro();
		
		
	double triangulo=per.perimetroTriangulo(2, 3, 4);
	System.out.print("el perimetro del triangulo es: " + triangulo);
	
	int cuadrado=per.perimetroCuadrado(5);
	System.out.print("el perimetro del cuadrado es: " + cuadrado);
	
	double circulo=per.perimetroCirculo(10);
	System.out.print("el perimetro del circulo es: " + circulo);
	
	
	System.out.println("calcular areas");
	Areas ar=new Areas();
	double arT=ar.areaTriangulo(2, 4);
	System.out.print("el area del triangulo es: " + arT);
	int arC=ar.areaCuadrado(4);
	System.out.print("el area del cuadrado es: " + arC);
	double arCi=ar.areaCirculo(5);
	System.out.print("el perimetro del circulo es: " + arCi);
	}

}
