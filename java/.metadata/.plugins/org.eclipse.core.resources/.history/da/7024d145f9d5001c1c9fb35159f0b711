package com.perritos;

public class Perro {
	//atributos o propiedades 
	String nombre;
	int edad;
	String raza;
	String tamaño;
	//constructor
	public Perro(String nombre,int edad) {
		
		this.nombre=nombre;
		this.edad=edad;
	}
	
	//metodo 
			public void ladrar() {
				System.out.println(" el perro " + nombre + " hace guauf" );
			}
			public int edadPerruna() {
				return edad*7;
			}
		
	

}
